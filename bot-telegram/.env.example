# Token du bot Telegram (obtenu depuis @BotFather)
BOT_TOKEN=your_bot_token_here

# Votre ID Telegram (obtenu depuis @userinfobot)
ADMIN_ID=your_telegram_id_here

# URL MongoDB (même que votre boutique)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# URL du webhook (pour déploiement sur Render/Railway)
WEBHOOK_URL=https://your-bot.onrender.com

# Port pour le serveur webhook (optionnel, par défaut 3000)
PORT=3000